# Dockerfile.dev
FROM node:18-slim

WORKDIR /app

# Install dependencies for development
RUN apt-get update && apt-get install -y \
    git \
    curl \
    bash \
    && rm -rf /var/lib/apt/lists/*

# Copy package files
COPY package.json package-lock.json ./
RUN npm install

# Copy source code
COPY . .

# Expose port and start development server
EXPOSE 3000
CMD ["npm", "run", "dev"]
