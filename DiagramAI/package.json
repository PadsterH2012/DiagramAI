{
  "name": "diagramai",
  "version": "1.0.0",
  "description": "AI-Powered Diagram Generation and Editing Platform",
  "private": true,
  "scripts": {
    "dev": "node server.js",
    "build": "next build",
    "start": "node server.js",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "playwright test",
    "test:e2e:performance": "playwright test tests/e2e/performance.spec.ts",
    "test:e2e:security": "playwright test tests/e2e/security.spec.ts",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:ci": "npm run test:coverage && npm run test:e2e",
    "test:realtime": "node scripts/test-realtime.js",
    "test:websocket": "jest __tests__/websocket-realtime.test.ts",
    "test:realtime-integration": "jest __tests__/integration/realtime-flow.test.ts",
    "test:all-realtime": "npm run test:websocket && npm run test:realtime-integration && npm run test:realtime",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "docker:dev": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f app",
    "docker:build": "docker build -t diagramai .",
    "prepare": "husky install"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.24.0",
    "@azure/openai": "^2.0.0",
    "@prisma/client": "^5.0.0",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.18.1",
    "@xyflow/react": "^12.6.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.0",
    "mermaid": "^11.0.0",
    "next": "^15.0.0",
    "next-auth": "^4.24.0",
    "openai": "^4.0.0",
    "prisma": "^5.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "redis": "^4.6.0",
    "uuid": "^11.1.0",
    "ws": "^8.18.2",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@types/bcryptjs": "^2.4.0",
    "@types/jest": "^29.5.0",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^15.0.0",
    "husky": "^9.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-watch-typeahead": "^2.2.2",
    "node-fetch": "^2.7.0",
    "postcss": "^8.4.0",
    "prettier": "^3.2.0",
    "tailwindcss": "^3.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "diagram",
    "ai",
    "mermaid",
    "react-flow",
    "nextjs",
    "typescript"
  ],
  "author": "DiagramAI Team",
  "license": "MIT"
}
